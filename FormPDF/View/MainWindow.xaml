<Window x:Class="FormPDF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FormPDF"
        mc:Ignorable="d"
        Height="700" Width="600"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        
        <!--Nos recursos da janela, estou criando dois ControlTemplate para personalizar os comportamentos dos dois botões do App.
            Cada control template terá um border com textblock dentro. O comportamento de trigger (IsMouseOver) também será atribuído aqui.-->

        <ControlTemplate x:Key="PdfButtonTemplate" TargetType="Button">
            <Border x:Name="PdfButtonBorder"
                    Background="#FA5C5C"
                    CornerRadius="9"
                    Padding="10"
                    BorderBrush="Transparent"
                    BorderThickness="0">
                <TextBlock Text="Convert to PDF"
                           FontFamily="Malgun Gothic Semilight"
                           Foreground="#003D4D"
                           FontSize="20"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="PdfButtonBorder" Property="Background" Value="#8A5C6C"/>
                    <Setter TargetName="PdfButtonBorder" Property="BorderBrush" Value="#ffffff"/>
                    <Setter TargetName="PdfButtonBorder" Property="BorderThickness" Value="2"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <ControlTemplate x:Key="PreviewButtonTemplate" TargetType="Button">
            <Border x:Name="PreviewButtonBorder" 
                    Background="#F5FBE6"
                    Height="30"
                    Width="70"
                    Margin="0,0,40,0"
                    CornerRadius="3">
                <TextBlock Text="Preview"
                           FontFamily="Malgun Gothic Semilight"
                           Foreground="#003D4D"
                           FontSize="15"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="PreviewButtonBorder" Property="Background" Value="#6594B1"/>
                    <Setter TargetName="PreviewButtonBorder" Property="BorderBrush" Value="#000000"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

    </Window.Resources>

    <Border Background="#F5FBE6" 
            CornerRadius="20">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!--Left menu-->
            <Border BorderBrush="#000000"
                    BorderThickness="0,0,0.5,0">
                <Grid Grid.Column="0">
                    <TextBlock Style="{StaticResource TitleStyle}" 
                               Text="FormPDF"
                               FontSize="30"
                               Padding="10"
                               HorizontalAlignment="Center"/>
                </Grid>
            </Border>

            <!--Right menu-->
            <Grid Grid.Column="1">

                <Grid.RowDefinitions>
                    <RowDefinition Height="100"/>
                    <RowDefinition/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>

                <!--First row right menu-->
                <TextBlock Style="{StaticResource TitleStyle}" 
                           Grid.Row="0"
                           Text="Sign the form"
                           FontSize="20"
                           FontWeight="Medium"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Center"/>

                <!--Second row right menu -->
                <Grid Grid.Row="1"
                      Margin="10">

                    <Border BorderBrush="#233D4D"
                            BorderThickness="2"
                            CornerRadius="2">

                        <!--Forms grid-->
                        <Grid>

                            <Grid.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#233D4D" Offset="0"/>
                                    <GradientStop Color="#003D4D" Offset="1"/>
                                </LinearGradientBrush>
                            </Grid.Background>

                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" 
                                  Margin="5">
                                <TextBlock Style="{StaticResource FieldLabelStyle}"
                                            Text="First Name:"/>
                                <TextBox Style="{StaticResource TextBoxStyle}"
                                         Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"
                                          Width="150"/>
                            </Grid>

                            <Grid Grid.Row="1"
                                  Margin="5">
                                <TextBlock Style="{StaticResource FieldLabelStyle}" 
                                           Text="Last Name:"/>
                                <TextBox Style="{StaticResource TextBoxStyle}"
                                         Width="280"
                                         Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"/>
                            </Grid>

                            <Grid Grid.Row="2"
                                  Margin="5">
                                <TextBlock Style="{StaticResource FieldLabelStyle}"
                                           Text="Address:"/>
                                <TextBox Style="{StaticResource TextBoxStyle}"
                                         Width="280"
                                         Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"/>
                            </Grid>

                            <Grid Grid.Row="3"
                                  Margin="5">
                                <TextBlock Style="{StaticResource FieldLabelStyle}" 
                                           Text="Email:"/>
                                <TextBox Style="{StaticResource TextBoxStyle}"
                                         Width="280"
                                         Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
                            </Grid>

                            <Grid Grid.Row="4"
                                  Margin="5">
                                <TextBlock Style="{StaticResource FieldLabelStyle}" 
                                           Text="Phone:"/>
                                <TextBox Style="{StaticResource TextBoxStyle}"
                                         Width="150"
                                         Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"/>
                            </Grid>

                            <StackPanel Grid.Row="5" 
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Center">

                                <Button Content="Preview"
                                        Foreground="#003D4D"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Command="{Binding ExportCommand}"
                                        Template="{StaticResource PreviewButtonTemplate}">
                                </Button>                                    

                                <Button 
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Width="170"
                                    Height="60"
                                    Cursor="Hand"
                                    Template="{StaticResource PdfButtonTemplate}"/>
                            </StackPanel>
                            
                        </Grid>

                    </Border>

                </Grid>

            </Grid>

        </Grid>

    </Border>

</Window>